<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/dispay"
        android:layout_width="230dp"
        android:layout_height="262dp"
        android:scrollbars="vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Text"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/num1"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignTop="@+id/num2"
        android:layout_toStartOf="@+id/num2"
        android:gravity="center"
        android:text="1"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/num2"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignTop="@+id/num3"
        android:layout_toStartOf="@+id/num3"
        android:gravity="center"
        android:text="2"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/num3"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_above="@+id/numdivide"
        android:layout_toStartOf="@+id/num0"
        android:gravity="center"
        android:text="3"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/num4"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignStart="@+id/num1"
        android:layout_below="@+id/num1"
        android:gravity="center"
        android:text="4"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/num5"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@+id/num2"
        android:layout_toEndOf="@+id/num4"
        android:gravity="center"
        android:text="5"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/num6"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@+id/num3"
        android:layout_toEndOf="@+id/num5"
        android:gravity="center"
        android:text="6"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/num7"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@+id/num4"
        android:layout_toStartOf="@+id/num5"
        android:gravity="center"
        android:text="7"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/num8"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@+id/num5"
        android:layout_toEndOf="@+id/num7"
        android:gravity="center"
        android:text="8"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/num9"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@+id/num6"
        android:layout_toEndOf="@+id/num8"
        android:gravity="center"
        android:text="9"
        android:textSize="36sp" />


    <TextView
        android:id="@+id/num0"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/numplus"
        android:gravity="center"
        android:text="0"
        android:textSize="36sp" />


    <TextView
        android:id="@+id/numplus"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="+"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/numminis"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_above="@+id/num0"
        android:layout_toEndOf="@+id/num0"
        android:gravity="center"
        android:text="-"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/numdivide"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_above="@+id/numminis"
        android:layout_toEndOf="@+id/num0"
        android:gravity="center"
        android:text="/"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/nummultyply"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@+id/num1"
        android:layout_toEndOf="@+id/num3"
        android:gravity="center"
        android:text="*"
        android:textSize="36sp" />


    <TextView
        android:id="@+id/numdot"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/num2"
        android:gravity="center"
        android:text=",|."
        android:textSize="36sp" />

    <TextView
        android:id="@+id/numend"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignStart="@+id/num0"
        android:layout_alignTop="@+id/num3"
        android:gravity="center"
        android:text="="
        android:textColor="@color/colorAccent"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/numC"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignBottom="@+id/num1"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="C"
        android:textColor="@color/colorC"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/numback"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_above="@+id/num1"
        android:layout_alignParentEnd="true"
        android:src="@drawable/backspace" />

    <TextView
        android:id="@+id/numpercent"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@+id/num4"
        android:layout_toEndOf="@+id/num3"
        android:gravity="center"
        android:text="%"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/numbl"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/num1"
        android:gravity="center"
        android:text="("
        android:textSize="36sp" />


    <TextView
        android:id="@+id/numbr"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/num1"
        android:gravity="center"
        android:text=")"
        android:textSize="36sp" />



</RelativeLayout>

